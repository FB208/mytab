{
  "manifest_version": 3,
  "name": "MyTab - WebDAV 同步书签面板",
  "version": "0.5.1",
  "description": "一个简洁、美观、轻量、免费的新标签页面板，支持自定义 WebDAV 备份与历史记录恢复，确保你永远不会丢失自己的收藏。",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "unlimitedStorage",
    "bookmarks"
  ],
  "host_permissions": [
    "https://mt.agnet.top/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "MyTab",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
}
